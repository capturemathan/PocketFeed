<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:textSize="18dp"
            android:id="@+id/myname"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:text="Â© Mathana Kumar. S"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">

            <TextView
                android:textAllCaps="true"
                android:id="@+id/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:text="Pocket Feed"/>
            <TextView
                android:gravity="center"
                android:textSize="25sp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/aboutapp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/app_name"
                android:text="The latest and crisp newsfeed at your fingertips."/>

            <ImageView
                android:layout_below="@+id/aboutapp"
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/news"/>
            <RelativeLayout
                android:paddingTop="10dp"
                android:layout_below="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true">

                <Button
                    android:textSize="18sp"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:id="@+id/proceed"
                    android:layout_width="match_parent"
                    android:layout_toRightOf="@id/about"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent"
                    android:text="Catch The Latest News"
                    android:textColor="@color/icons"
                    android:onClick="proceed"/>

            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>