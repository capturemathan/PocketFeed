<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.android.absentsir.Content">

        <TextView
            android:textColor="@color/primary_text"
            android:layout_marginTop="20dp"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select your Preference"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="88dp"
                android:layout_height="match_parent"
                android:src="@drawable/business"
                app:riv_corner_radius="40dip"
                android:layout_marginRight="16dp"/>

            <TextView
                android:background="@drawable/rounded_txtview"
                android:textSize="21sp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/international"
                style="@style/CategoryStyle"
                android:text="Business"
                android:onClick="business"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="88dp"
                android:layout_height="match_parent"
                android:src="@drawable/entertainment"
                app:riv_corner_radius="40dip"
                android:layout_marginRight="16dp"/>

            <TextView
                android:background="@drawable/rounded_txtview"
                android:textSize="21sp"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:id="@+id/entertainment"
                style="@style/CategoryStyle"
                android:text="Entertainment"
                android:onClick="entertainment"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="88dp"
                android:layout_height="match_parent"
                android:src="@drawable/health"
                app:riv_corner_radius="20dip"
                android:layout_marginRight="16dp"/>

            <TextView
                android:background="@drawable/rounded_txtview"
                android:textSize="21sp"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:id="@+id/health"
                style="@style/CategoryStyle"
                android:text="Health"
                android:onClick="health"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="88dp"
                android:layout_height="match_parent"
                android:src="@drawable/science"
                app:riv_corner_radius="20dip"
                android:layout_marginRight="16dp"/>

            <TextView
                android:background="@drawable/rounded_txtview"
                android:textSize="21sp"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:id="@+id/science"
                style="@style/CategoryStyle"
                android:text="Science"
                android:onClick="science"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="88dp"
                android:layout_height="match_parent"
                android:src="@drawable/sports"
                app:riv_corner_radius="20dip"
                android:layout_marginRight="16dp"/>

            <TextView
                android:background="@drawable/rounded_txtview"
                android:textSize="21sp"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:id="@+id/sports"
                style="@style/CategoryStyle"
                android:text="Sports"
                android:onClick="sport"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="88dp"
                android:layout_height="match_parent"
                android:src="@drawable/tech"
                app:riv_corner_radius="20dip"
                android:layout_marginRight="16dp"/>

            <TextView
                android:background="@drawable/rounded_txtview"
                android:textSize="21sp"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:id="@+id/technology"
                style="@style/CategoryStyle"
                android:text="Technology"
                android:onClick="tech"
                />

        </LinearLayout>
    </LinearLayout>
</ScrollView>